<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#000"
    android:orientation="vertical"
    android:scrollbarSize="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.example.manchotstudios.com.spring.MainActivity"
    android:weightSum="1"
    android:padding="10sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Mettre à jour une tâche"
        android:textSize="30sp"
        android:textColor="#0099ff"
        android:background="#111"
        />

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom de la tâche"
        android:textColor="#0099ff"
        android:textSize="30sp"
        android:id="@+id/lblNomTache" />

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progression"
        android:textColor="#757575"
        android:textSize="25sp"
        android:id="@+id/textView" />

    <SeekBar
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="center"
        android:mirrorForRtl="false"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0%"
        android:id="@+id/seekBarValue"
        android:textColor="#ffffff"
        android:layout_gravity="right" />

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commentaire"
        android:textColor="#757575"
        android:textSize="25sp"
        android:id="@+id/lblComment" />

    <EditText
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_gravity="center"
        android:id="@+id/editText"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Soumettre"
        android:id="@+id/submitButton"
        android:layout_gravity="bottom|right"
        android:textColor="#d8d8d8"
        android:background="#555555" />

</LinearLayout>